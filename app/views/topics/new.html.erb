<%= stylesheet_link_tag 'navbar', media: 'all', 'data-turbolinks-track': 'reload' %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<nav>
  <div class="nav-content">
    <div class="logo">
      <a><%= link_to 'JustWrite', root_path %></a>
    </div>
    <ul class="nav-links">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Tags', tags_path %></li>
      <li><a href="#">Post</a></li>
      <li><a href="#">About us</a></li>
    </ul>
  </div>
</nav>
<section class="home"></section>
<div class="text">
<h1>New topic</h1>

<%= render "form", topic: @topic %>

<br>

<div>
  <a href="/topics"><button class="btn btn-success"><-Back to Topics</button></a>
</div></div>
<script>
    let nav = document.querySelector("nav");
    window.onscroll = function() {
        if(document.documentElement.scrollTop > 20){
            nav.classList.add("sticky");
        }else {
            nav.classList.remove("sticky");
        }
    }
</script>
