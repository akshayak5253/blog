<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<%= form_with(model: [@topic, @post], url: topic_posts_path(@topic, @post), method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: "Enter the title name" %>
  </div>
  <div class="form-group">
    <%= form.label :writer %>
    <%= form.text_field :writer, class: 'form-control', placeholder: "Enter the writer name" %>
  </div>
  <div class="form-group">
    <%= form.label :content, style: "display: inline" %>
    <%= form.text_area :content, class: 'form-control', placeholder: "Write the blog", rows: 6 %>
  </div>

  <div class="form-group">
    <%= form.label :tag_ids, 'Tags', style: "display:inline" %>
    <% Tag.all.each do |tag| %>
      <div class="form-check">
        <%= check_box_tag 'post[tag_ids][]', tag.id, @post.tags.include?(tag), class: 'form-check-input' %>
        <%= label_tag nil, tag.name, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= link_to "Want to create a new tag?", tags_path %>
  </div>

  <div class="form-group">
    <%= form.submit "Create", class: 'btn btn-primary' %>
    <%= link_to "Cancel", topic_posts_path, class: 'btn btn-danger' %> <!-- Replace some_path with your cancel action's path -->

  </div>
<% end %>

