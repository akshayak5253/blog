
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<%= stylesheet_link_tag 'navbar', media: 'all', 'data-turbolinks-track': 'reload' %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
<nav>
  <div class="nav-content">
    <div class="logo">
      <a><%= link_to 'JustWrite', root_path %></a>
    </div>
    <ul class="nav-links">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Topics', topics_path %></li>
      <li><%= link_to 'Tags', tags_path %></li>
      <li><a href="#">About us</a></li>
    </ul>
  </div>
</nav>
<section class="home"></section>
<div class="text">
  <a href="posts/new"><button class="btn btn-success">Create new post</button></a>

  <div class="search">
  </div>
  <p style="color: green"><%= notice %></p>

  <h1 style="text-align: center">Posts</h1>
  <div id="topics">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">S.No</th>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Posted at</th>
        <th scope="col">Last Updated at</th>

      <tr>
        <thead>
      <tbody>
      <% @posts.each_with_index do |post,i| %>
        <tr><th scope="col"><%=i+1 %></th>
          <td><%= link_to post.title, topic_post_path(post.topic, post) %></td>
          <td><%=post.writer%></td>
          <td><%=post.created_at.strftime('%d/%m/%y')%></td>
          <td><%time_difference = (Time.now - post.updated_at)/3600 %><%=time_difference.round(0)%> hour(s)ago<td>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="pagination">
  <%= paginate @posts %>
</div>





