
  <h1>All Ratings</h1>

  <ul>
    <% @ratings.each do |rating| %>
      <li>
        <strong>User:</strong> <%= rating.user.email %>,
        <strong>Comment:</strong> <%= rating.comment.content %>,
        <strong>Rating:</strong> <%= rating.rating %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Back to Comments", topic_post_comments_path(@topic, @post, @comment), class: "btn btn-secondary" %>

</div>
